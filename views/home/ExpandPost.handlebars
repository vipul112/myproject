<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Blog Post - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/blog-post.css" rel="stylesheet">

  </head>

  <body>

    <!-- Navigation -->


    <!-- Page Content -->
    <div class="container">

      <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author-->
          <p class="lead">
            by
            <a href="#">{{post.user.email}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>{{post.date}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

          <hr>

          <!-- Post Content -->
          <p class="lead">{{post.body}}</p>

          <blockquote class="blockquote">
            <p class="mb-0">{{post.body}}</p>
            <footer class="blockquote-footer">Someone famous in
              <cite title="Source Title">Source Title</cite>
            </footer>
          </blockquote>

          <p>{{post.body}}</p>
          <hr>
{{#if user}}
  {{#if post.allowComments}}
          <!-- Comments Form -->
          <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
              <form action="/admin/comments" method="post">
                <div class="form-group">
                  <textarea name="body" class="form-control" rows="3"></textarea>
                  <input type="hidden" name="id" value={{post.id}}>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
          {{else}}
          <h2>Comments are disabled by the user for this post.</h2><br>
      {{/if}}
{{else}}
      <h2>You need to Login First to Comment <a href="/loginpage">Login here</a></h2><br>
{{/if}}

          {{#each post.comments}}
          <!-- Single Comment -->

          <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
              <h5 class="mt-0">{{user.email}}</h5>
              {{body}}
            </div><br>
            <div class="card-footer text-muted">
              {{date}}
            </div>
          </div>
          {{/each}}



        <!-- Sidebar Widgets Column -->
